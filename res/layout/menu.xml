<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background" >
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/headerc" >

        <ImageView
            android:id="@+id/headericon"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/headericon" />

        <ImageView
            android:id="@+id/imgsearch"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/tvAppName"
            android:layout_toLeftOf="@+id/imglogout"
            android:src="@drawable/search"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/headericon"
            android:text="Get..Set..Go..."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:textStyle="bold"
            android:typeface="serif" 
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:id="@+id/imglogout"
            android:layout_width="25dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/logout"
            android:layout_marginRight="5dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txtHeadingWU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome To User"
        android:layout_gravity="center"
       android:textColor="#AFFF49"
        android:textAppearance="?android:attr/textAppearanceLarge" />
              
     <Button
        android:id="@+id/btnViewOwnPlacesWU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="View Own Places" 
        android:layout_gravity="center"
        />


     <Button
        android:id="@+id/btnAddOwnPlaceWU"
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add Own Place" />
		
     <Button
        android:id="@+id/btnUpdateOrDeleteWU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Update Or Delete" />

     <Button
        android:id="@+id/btnChangePasswordWU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Change Password" />

     <Button
        android:id="@+id/btnLogoutWU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="140dp"
        android:text="Logout" />

</LinearLayout>