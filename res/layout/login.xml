<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/background">    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/headerc" >

        <ImageView
            android:id="@+id/headericon"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/headericon" />

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/headericon"
            android:text="Get..Set..Go..."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:textStyle="bold"
            android:typeface="serif" 
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:id="@+id/imgsearch"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/tvAppName"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:src="@drawable/search2" />

    </RelativeLayout>
   <TextView
        android:id="@+id/txtVwHeadingLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Login Page"
        android:layout_marginTop="20dp"
        android:textColor="@color/headingsc"
        style="@android:anim/accelerate_interpolator"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
        android:id="@+id/txtVwUserNameLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name" 
        android:layout_marginTop="20dp"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:textStyle=""
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/edTxtUserNameLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:selectAllOnFocus="true"
        android:textSize="14dp"
          >
        <requestFocus/>
        </EditText>

    <TextView
        android:id="@+id/txtVwPasswordLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/edtxtPasswordLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textSize="14dp"
          />

        
    

<LinearLayout android:layout_width="fill_parent"
    	android:layout_height="70dp"
    	android:orientation="horizontal"
    	android:gravity="center" >

    <Button
        android:id="@+id/btnLoginL"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:text="Login"
        android:textSize="14dp"
          android:background="@drawable/button_effects"
          android:textColor="@color/white"/>
    

    <Button
        android:id="@+id/btnClearLogin"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="40dp"
        android:text="Clear"
      android:textSize="14dp"
       android:background="@drawable/button_effects"
          android:textColor="@color/white"/>
    
    </LinearLayout>

<LinearLayout android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:gravity="center" >

    <Button
        android:id="@+id/btnCreateAccountLogin"
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_effects"
        android:text="Create New Account"
        android:textColor="@color/white"
        android:textSize="14dp" />

    <Button
        android:id="@+id/btnForgotPswdLogin"
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:text="Forgot Password" 
        android:textSize="14dp"
        android:background="@drawable/button_effects"
        android:textColor="@color/white"/>
    
    </LinearLayout>

</LinearLayout>