<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/headerc" >

        <ImageView
            android:id="@+id/headericon"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/headericon" />

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/headericon"
            android:text="Get..Set..Go..."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold"
            android:typeface="serif" />

        <ImageView
            android:id="@+id/imglogout"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/logout" />

        <ImageView
            android:id="@+id/imgsearch"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/imglogout"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/imglogout"
            android:src="@drawable/search2" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txtHeadingCP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Change Password"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/headingsc" />

    <TextView
        android:id="@+id/txtOldPasswordCP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtHeadingCP"
        android:layout_marginTop="18dp"
        android:text="Enter Old Password *"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/edtOldPasswordCP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtOldPasswordCP"
        android:inputType="textPassword"
        android:textSize="14dp" >
    
        <requestFocus />
</EditText>
    <TextView
        android:id="@+id/txtNewPasswordCP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/edtOldPasswordCP"
        android:text="Enter New Password *"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/edtNewPasswordCP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtNewPasswordCP"
        android:inputType="textPassword"
        android:textSize="14dp" />


 <TextView
     android:id="@+id/txtConfirmPasswordCP"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentLeft="true"
     android:layout_below="@+id/edtNewPasswordCP"
     android:text="Confirm Password *"
     android:textAppearance="?android:attr/textAppearanceMedium"
     android:textColor="@color/black"
     android:textSize="14dp" />

 <EditText
     android:id="@+id/edtConfirmPasswordCP"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_alignParentLeft="true"
     android:layout_below="@+id/txtConfirmPasswordCP"
     android:ems="10"
     android:inputType="textPassword"
     android:textSize="14dp" />
    
 
 
 
 
 
 <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="30dp"
       android:gravity="center"
       android:orientation="horizontal"
       android:layout_below="@+id/edtConfirmPasswordCP" >

       <Button
           android:id="@+id/btnSaveCP"
           android:layout_width="90dp"
           android:layout_height="35dp"
           android:layout_marginRight="35dp"
           android:background="@drawable/button_effects"
           android:text="Save"
           android:textColor="@color/white" />

       <Button
           android:id="@+id/btnResetCP"
           android:layout_width="90dp"
           android:layout_height="35dp"
           android:background="@drawable/button_effects"
           android:text="Reset"
           android:textColor="@color/white" />
   </LinearLayout>
</RelativeLayout>