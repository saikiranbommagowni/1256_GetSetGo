<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background" >
       <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/headerc" >

        <ImageView
            android:id="@+id/headericon"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/headericon" />

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/headericon"
            android:text="Get..Set..Go..."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:textStyle="bold"
            android:typeface="serif" 
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:id="@+id/imgsearch"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/tvAppName"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:src="@drawable/search2" />

    </RelativeLayout>
      <TextView
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Password Recovery Page"
        android:textColor="@color/headingsc"
        android:layout_marginTop="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
      <TextView
          android:id="@+id/txtVwEmail"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Enter Email-id *"
          android:layout_marginTop="30dp"
           android:textSize="14dp"
           android:textColor="@color/black"
          android:textAppearance="?android:attr/textAppearanceMedium" />

      <EditText
          android:id="@+id/edtTxtEmailPR"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
          
          android:inputType="textEmailAddress" 
           android:textSize="14dp"
          >

          <requestFocus />
      </EditText>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="30dp"
       android:gravity="center"
       android:orientation="horizontal" >

       <Button
           android:id="@+id/btnEnterPR"
           android:layout_width="90dp"
           android:layout_height="35dp"
           android:layout_marginRight="35dp"
           android:background="@drawable/button_effects"
           android:text="Enter"
           android:textColor="@color/white" />

       <Button
           android:id="@+id/btnClearPR"
           android:layout_width="90dp"
           android:layout_height="35dp"
           android:background="@drawable/button_effects"
           android:text="Clear"
           android:textColor="@color/white" />
   </LinearLayout>

   <TextView
       android:id="@+id/txtRecoveredPassword"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:layout_gravity="center"
       android:layout_marginTop="30dp" 
        android:textSize="14dp"
          android:textColor="@color/black"
       />

</LinearLayout>